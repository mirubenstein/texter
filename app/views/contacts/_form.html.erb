<% if @contact.errors.any? %>
  <ul>
  <%= @contact.errors.full_contacts.each do |contact| %>
    <li><%= contact %></li>
  <% end %>
  </ul>
<% end %>

<%= form_for @contact do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :phone %>
  <%= f.text_field :phone %>
  <%= f.submit %>
<% end %>
